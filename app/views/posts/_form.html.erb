<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :post_type %><br />
   <%= f.select :post_type, options_for_select({ "Quote" => "quote", "Thoughts" => "thoughts"}) %>
  </div>
  <div class="field">
    <%= f.label :book %><br />
    <%= collection_select(:post, :book_id, Book.all, "id", "title") %>
  </div> 	
 	<%= f.hidden_field :user_id, :value => @current_user.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
